{% extends "layouts/app.twig" %}


{% block content %}

    <div class="flex flex-grow items-center justify-center">
        <form method="post" class="bg-gray-50 border border-gray-200 rounded shadow-md px-12 py-8 flex flex-col space-y-4">

            {% if form.error %}
                <p class="bg-red-500 text-gray-100 p-3 rounded">
                    {{ form.error }}
                </p>
            {% endif %}

            <div class="flex flex-col space-y-1 w-80">
                <label for="username" class="font-medium text-gray-700">Username</label>
                <input id="username" type="text" name="username" value="{{ form.username.value }}"
                       class="rounded-sm border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300" autofocus required>
                {% if form.username.error %}
                    <span class="text-red-500 text-sm">{{ form.username.error }}</span>
                {% endif %}
            </div>

            <div class="flex flex-col space-y-1 w-80">
                <label for="password" class="font-medium text-gray-700">Password</label>
                <div class="relative" x-data="{visible:false}">
                    <input id="password" type="password" name="password" x-ref="field"
                           class="w-full rounded-sm border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300 relative" required>
                    <span class="absolute right-0 text-gray-800 cursor-pointer p-3" @click="visible=!visible;$refs.field.type=visible?'text':'password'">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" x-show="visible" x-cloak>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" x-show="!visible">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </span>
                </div>
                {% if form.password.error %}
                    <span class="text-red-500 text-sm">{{ form.password.error }}</span>
                {% endif %}
            </div>

            {% include('partials/csrf_token.twig') %}

            <div class="pt-4 flex space-x-4">
                <button type="submit" class="bg-gray-700 text-gray-200 hover:bg-gray-800 hover:text-gray-100 px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300">Login</button>
                <a href="{{ url_for('index') }}" class="bg-gray-700 text-gray-200 hover:bg-gray-800 hover:text-gray-100 px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300">Cancel</a>
            </div>

        </form>
    </div>

{% endblock %}
