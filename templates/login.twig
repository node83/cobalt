{% extends "layouts/app.twig" %}


{% block content %}

    <div class="flex flex-grow items-center justify-center">
        <form method="post" class="max-w-prose bg-gray-200 rounded shadow-xl px-12 py-8 flex flex-col space-y-4">

            <img src="{{ static('logo.png') }}" alt="{{ config('app.name') }}" class="w-20 h-20 block mx-auto">

            {% if form.error %}
                <p class="bg-red-500 text-gray-100 p-3 rounded">
                    {{ form.error }}
                </p>
            {% endif %}

            <div class="flex flex-col space-y-1">
                <label for="username" class="font-medium text-gray-700">Username</label>
                <input id="username" type="text" name="username" value="{{ form.username.value }}"
                       class="rounded-sm border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300" autofocus required>
                {% if form.username.error %}
                    <span class="text-red-500 text-sm">{{ form.username.error }}</span>
                {% endif %}
            </div>

            <div class="flex flex-col space-y-1">
                <label for="password" class="font-medium text-gray-700">Password</label>
                <input id="password" type="password" name="password"
                       class="rounded-sm border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300" required>
                {% if form.password.error %}
                    <span class="text-red-500 text-sm">{{ form.password.error }}</span>
                {% endif %}
            </div>

            {{ csrf_input() }}

            <div class="pt-4 flex space-x-4">
                <button type="submit" class="bg-gray-700 text-gray-200 px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300">Login</button>
                <a href="{{ url_for('index') }}" class="bg-gray-700 text-gray-200 px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-300">Cancel</a>
            </div>

        </form>
    </div>

{% endblock %}
